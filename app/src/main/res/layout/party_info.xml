<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Info"
        android:paddingLeft="10dp"
        android:background="#33FFCC"
        android:textColor="@color/Black"
        android:id="@+id/textView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/White">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/imageView"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/partyNameView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Party Name"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/background_material_dark"
            android:textSize="25dp"
            android:layout_alignTop="@+id/dateTimeView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/dateTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today 20:00"
            android:textSize="15dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/distanceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingRight="5dp"
            android:text="3 km"
            android:textSize="10dp"
            android:layout_below="@+id/dateTimeView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:id="@+id/scrollView"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"

        android:background="@color/White">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description:"
                android:id="@+id/textView11"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin tempor tempor posuere. Nunc malesuada ex nec dolor vehicula, in sodales leo semper. Mauris lacinia enim eget justo semper, a sagittis dui congue. Cras dapibus pretium lobortis. Pellentesque dapibus feugiat consectetur. Sed eget sapien felis. In et sem a velit sodales mattis. Duis eget efficitur lorem. Aenean non feugiat erat. Morbi lectus ligula, dignissim vitae venenatis tempus, dictum at augue. Donec risus augue, venenatis a odio condimentum, feugiat ullamcorper sem."
                android:id="@+id/textView10"
                android:layout_weight="0.46"
                android:textSize="13dp"
                android:layout_marginTop="6dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#33FFCC">

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Share Event"
            android:id="@+id/button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Host"
            android:id="@+id/callButton"
            android:layout_below="@id/distanceView"/>
    </LinearLayout>


</LinearLayout>